<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_data_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="6dp"
    tools:context=".TambahDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- NIM -->
        <TextView
            android:id="@+id/label_nim_data"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NIM"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_nim_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_nim_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/label_name_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_nim_data"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_name_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_name_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tempat Lahir -->
        <TextView
            android:id="@+id/label_tempat_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_name_data"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_tempat_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_tempat_lahir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tanggal Lahir -->
        <TextView
            android:id="@+id/label_tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_tempat_lahir"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/label_tanggal_lahir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Alamat -->
        <TextView
            android:id="@+id/label_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_tanggal_lahir"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_alamat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Agama -->
        <TextView
            android:id="@+id/label_agama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agama"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_alamat"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_agama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_agama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Telepon/HP -->
        <TextView
            android:id="@+id/label_telp_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tlp/hp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_agama"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_telp_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/label_telp_hp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tahun Masuk -->
        <TextView
            android:id="@+id/label_tahun_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun Masuk"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_telp_hp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_tahun_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/label_tahun_masuk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tahun Lulus -->
        <TextView
            android:id="@+id/label_tahun_lulus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun Lulus"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_tahun_masuk"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_tahun_lulus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/label_tahun_lulus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pekerjaan -->
        <TextView
            android:id="@+id/label_pekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pekerjaan"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_tahun_lulus"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_pekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/label_pekerjaan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Jabatan -->
        <TextView
            android:id="@+id/label_jabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jabatan"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edt_pekerjaan"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_jabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/label_jabatan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_data"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_jabatan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>